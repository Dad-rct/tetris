{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "webpack web producer",
			"group": "build",
			"isBackground": true,
			"command": ".${pathSeparator}node_modules${pathSeparator}.bin${pathSeparator}webpack",
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"out": "producer",
					"target": "web"
				}
			},
			"args": [
				"-c",
				"webpack.config.js"
			],
			"problemMatcher": {
				"owner": "webpack",
				"severity": "error",
				"fileLocation": "relative",
				"pattern": [
					{
						"regexp": "ERROR in (.*)",
						"file": 1
					},
					{
						"regexp": "\\((\\d+),(\\d+)\\):(.*)",
						"line": 1,
						"column": 2,
						"message": 3
					}
				]
			}
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - client",
		}
	]
}